<div class="container offset-top-20">
  <div class="row">
    <div class="col-md-6 col-md-offset-3" id="logindev">
      <div class="panel panel-default">
        <div class="panel-heading">注册</div>
        <div class="panel-body">
          <%= devise_error_messages! %>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.text_field :email, type: :email, class: "form-control input", placeholder: "用户名 / Email" %>
          </div>
          <div class="form-group">
            <%= f.text_field :password, type: :password, class: "form-control input", placeholder: "密码" %>
          </div>
          <div class="form-group">
            <%= f.text_field :password_confirmation, type: :password, class: "form-control input", placeholder: "再次输入密码" %>
          </div>
          <div class="form-actions">
              <%= f.submit 'Sign Up', class: "btn btn-primary btn btn-block", 'data-disable-with' => 'Sign Up...' %>
          </div>
          <% end %>
        </div>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
