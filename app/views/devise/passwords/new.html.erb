
<div class="container offset-top-20">
  <div class="row">
    <div class="col-md-6 col-md-offset-3" id="logindev">
      <div class="panel panel-default">
        <div class="panel-heading">忘记密码</div>
        <div class="panel-body">
          <%= devise_error_messages! %>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post}) do |f| %>
          <div class="form-group">
            <%= f.text_field :email, type: :email, class: "form-control input", placeholder: "Email" %>
          </div>
          <div class="form-actions">
              <%= f.submit '发送密码重置邮件', class: "btn btn-primary btn btn-block" %>
          </div>
          <% end %>
        </div>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
